<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.plan.demo.order.dao.OrderMapper" >
  <select id="findNowOrderList" resultType="vo" parameterType="vo">
    select * from tb_order a
    where a.user_id = #{userId}
    and a.order_status in('1','2','3')
    <if test="orderRealType != null or orderRealType !=''">
        and a.order_real_type = #{orderRealType}
    </if>
  </select>
  
</mapper>